@model IEnumerable<Category>
@{
    ViewData["Titel"] = "List of Categories";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead> 

           <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.Icon)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Atrrubutres</th>


            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle"> 
                            <img class="rounded-circle" src="@item.Icon" alt="@item.Name" style="max-width:150px"/>
                        </td>
                        <td class="align-middle"> 
                            @Html.DisplayFor(modelItem => item.Name)

                        </td>
                        <td class="align-middle"> 
                            <a class="btn btn-outline-primary"><i class="bi bi-pencile-square">Edit</i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Detail</i></a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash">Delete</i></a>

                        </td>

                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>